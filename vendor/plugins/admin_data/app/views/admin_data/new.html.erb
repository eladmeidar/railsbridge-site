<div id="container">
  <%= ERB.new(File.read(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','views','_header.html.erb'))).result(binding) %>    
  <div id="wrapper">
    <div id="main">
    
    <div class='breadcrum'>
        <%= link_to 'Home',admin_data_path %>
        >
        <%= link_to @klass, admin_data_list_path(:klass => @klass.name) %> 
    </div>
    
    
      <h2 class="title"><%=@model.class.name%> </h2>        
      
      <%= ERB.new(File.read(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','views','_flash_message.html.erb'))).result(binding) %>      

      <div class="block" id="block-tables">
        <div class="secondary-navigation">
            <%= ERB.new(File.read(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','views','_secondary_navigation.html.erb'))).result(binding) %>                                              
          <div class="clear"></div>
        </div>          
        <div class="content">          
          <h2 class="title"></h2>
          <div class="inner">
          
          <h2>Create a new record</h2>
          <%= form_tag({:action => 'create', :klass => @klass.to_s}, {:class => 'nice_form'}) %>
            <%= ERB.new(File.read(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','views','_form.html.erb'))).result(binding) %>
          </form>
          
          
          </div>
        </div>
      </div>
        
      <%= ERB.new(File.read(File.join(RAILS_ROOT,'vendor','plugins','admin_data','lib','views','_powered_by.html.erb'))).result(binding) %>      
    </div>
    
    <div class="clear"></div>      
  </div>    
</div>

