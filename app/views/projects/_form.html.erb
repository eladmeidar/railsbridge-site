<% form_for(@project, :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :short_description %><br />
    <%= f.text_field :short_description %>
  </p>
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.label :long_description %><br />
    <%= f.text_area :long_description %>
  </p>
  <p>
    <%= f.label :team_lead %><br />
    <%= f.text_field :team_lead %>
  </p>
  <p>
    <%= f.label :team_lead_email %><br />
    <%= f.text_field :team_lead_email %>
  </p>
  <p>
    <%= f.label :site_image %><br />
    <%= f.file_field :site_image %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
